[
  {
    "name": "Welcome",
    "settings": [
      {
        "type": "paragraph",
        "content": "Theme settings allow designers to provide an easy way for any user to customize the look and feel of their shop without having to delve into HTML or CSS code. Please see our [help page on theme settings](http:\/\/docs.shopify.com\/themes\/theme-templates\/settings) to learn more about how you can make your theme customizable."
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color"
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "link_color",
        "label": "Link color"
      }
    ]
  },
  {
    "name": "Layout ",
    "settings": [
      {
      
        "type": "checkbox",
        "id": "general_usewide",
        "label": "Use Full-Width Layout"
      },
      {
        "type": "paragraph",
        "content": "A full-width layout will take 100% of the screen width. This is recommended for site with high-quality images."
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "select",
        "id": "base_font_family",
        "label": "Typeface",
        "options": [
          {
            "value": "'Source Sans Pro', sans-serif",
            "label": "Source Sans Pro",
            "group": "Google Fonts"
          },
          {
            "value": "Helvetica, Arial, sans-serif",
            "label": "Helvetica\/Arial",
            "group": "Sans-serif"
          }
        ]
      },
      {
        "type": "select",
        "id": "base_font_size",
        "label": "Base font size",
        "options": [
          {
            "value": "13px",
            "label": "13px"
          },
          {
            "value": "14px",
            "label": "14px"
          },
          {
            "value": "15px",
            "label": "15px"
          },
          {
            "value": "16px",
            "label": "16px"
